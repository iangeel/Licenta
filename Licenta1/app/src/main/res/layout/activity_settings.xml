<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.ase.angel.licenta1.SettingsActivity"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/mygradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Field size"
        android:textSize="20dp"
        android:layout_marginBottom="3dp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Field width"
           android:textColor="@android:color/holo_orange_dark"
           android:textStyle="bold"
           android:layout_marginBottom="5dp"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Set the field width. Field width is the distance between the posts."
           android:layout_marginBottom="5dp"/>

       <SeekBar
           android:id="@+id/seekWidthId"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:min="25"
           />

       <TextView
           android:id="@+id/widthValue"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@android:color/holo_orange_dark"
           android:layout_gravity="center"
           android:layout_marginBottom="5dp"/>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field height"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set the field height. Field height is the distance between the corners of the same team."
            android:layout_marginBottom="5dp"/>

        <SeekBar
            android:id="@+id/seekHeightId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="15"
            />

        <TextView
            android:id="@+id/heightValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field coordinates"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To get field coordinates move to the left corner of the opposite team post and press calculate."
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btnCalculateSize"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Calculate"
            android:textSize="12dp"
            android:textColor="@color/primaryThemeColor"
            android:background="@drawable/buttonshape_calculate_start"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_marginTop="115dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/btnSave"
        android:textColor="@color/primaryThemeColor"
        android:background="@drawable/buttonshape_save"/>
</LinearLayout>
