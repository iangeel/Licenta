<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.ase.angel.licenta1.RegisterActivity"
    android:orientation="vertical"
    android:padding="25dp"
    android:gravity="center"
    android:background="@drawable/basket_blurred">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_supervisor_account_white_48dp"
            />

        <EditText
            android:id="@+id/etUsername_register_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_text_username_email_hit"
            android:fontFamily="@font/octin"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_action_user"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:fontFamily="@font/octin"
            android:id="@+id/etPassword_register_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_text_password_hit"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_action_pass"
            android:inputType="textPassword"/>
        <EditText
            android:fontFamily="@font/octin"
            android:id="@+id/etRePassword_register_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_text_RePassword_hit"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:drawableLeft="@drawable/ic_action_pass"
            android:inputType="textPassword"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnRegister_register_activity"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/buttonshape_register_me"
        android:text="@string/register_button_register_activity"
        android:textColor="@android:color/white" />

</LinearLayout>
